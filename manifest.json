{

  "manifest_version": 2,
  "name": "UglyFix",
  "version": "0.2",

  "description": "Fixes for some ugly sites (Jan 15, 2019)",

  "icons": {
    "48": "icons/icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.newsru.com/*"],
      "css": ["css/newsru.com.css"]
    }
  ],

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["js/background.js"]
  }

}
